<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#ff000000"
             tools:context="it.unical.mat.smart_playground.balltracker.SettingsActivity"
             android:paddingTop="20pt">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:id="@+id/settingsTableLayout"
        android:layout_margin="10pt"
        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Min location delta (%):"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:layout_marginRight="5pt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minLocDeltaTextEdit"
                android:layout_column="3"
                android:text="0.0001"
                android:textColor="#ffffffff"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Min orientation delta (Â°)"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:layout_marginRight="5pt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minOrientDeltaTextEdit"
                android:layout_column="3"
                android:textColor="#ffffffff"
                android:text="1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Aruco detection delta (ms):"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:layout_marginRight="5pt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arucoDetectionDeltaTextEdit"
                android:layout_column="3"
                android:text="200"
                android:textColor="#ffffffff"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Min ball detection area:"
                android:id="@+id/textView5"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:layout_marginRight="5pt"
                android:layout_marginTop="10pt"
                android:layout_span="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="2000"
                android:id="@+id/minBallDetectionAreaTextView"
                android:layout_column="3"
                android:layout_marginTop="10pt"
                android:singleLine="false"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minBallDetectionAreaSeekBar"
                android:layout_column="0"
                android:indeterminate="false"
                android:max="100"
                android:progress="40"
                android:layout_span="4"
                android:layout_marginTop="5pt"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Color detection sensitivity:"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:layout_marginRight="5pt"
                android:layout_marginTop="10pt"
                android:layout_span="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="20"
                android:id="@+id/colorDetectionSensitivityTextView"
                android:layout_column="3"
                android:layout_marginTop="10pt"
                android:singleLine="false"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/colorDetectionSensitivitySeekBar"
                android:layout_column="0"
                android:indeterminate="false"
                android:max="100"
                android:progress="40"
                android:layout_span="4"
                android:layout_marginTop="5pt"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use color booster"
                android:id="@+id/useColorBoosterCheckBox"
                android:layout_column="0"
                android:checked="true"
                android:layout_marginTop="10pt"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Settings"
                android:id="@+id/saveSettingsButton"
                android:layout_column="0"
                android:layout_marginTop="20pt"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resetSettingsButton"
                android:layout_column="3"
                android:layout_marginTop="20pt"
                android:src="@android:drawable/ic_menu_rotate"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/infoTextview"
        android:layout_column="0"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="5pt"/>

</FrameLayout>
