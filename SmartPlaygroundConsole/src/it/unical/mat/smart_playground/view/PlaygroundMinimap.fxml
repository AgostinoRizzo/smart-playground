<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="432.0" prefWidth="472.0" styleClass="playground-minimap" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.mat.smart_playground.controller.playground.minimap.PlaygroundMinimapController">
   <children>
      <HBox prefHeight="423.0" prefWidth="472.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <AnchorPane prefHeight="403.0" prefWidth="238.0">
               <children>
                  <AnchorPane prefHeight="412.0" prefWidth="256.0" style="-fx-background-color: #446B32; -fx-background-radius: 20px;">
                     <children>
                        <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="235.0" prefWidth="192.0">
                           <children>
                              <ImageView fitHeight="402.0" fitWidth="237.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../../res/drawable/tennis_field_minimap.jpg" />
                                 </image>
                              </ImageView>
                              <Canvas fx:id="fieldCanvas" height="394.0" width="237.0" />
                              <Canvas fx:id="fieldArea" height="394.0" width="237.0">
                                 <cursor>
                                    <Cursor fx:constant="DEFAULT" />
                                 </cursor>
                              </Canvas>
                              <ImageView fx:id="ballImage" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../../res/drawable/tennis_ball.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </AnchorPane>
                        <Canvas fx:id="windLinesCanvas" height="412.0" width="256.0" />
                        <Pane fx:id="fieldAreaPane" layoutX="30.0" layoutY="30.0" onMouseClicked="#handleFieldAreaClick" prefHeight="354.0" prefWidth="193.0">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Pane>
                     </children>
                  </AnchorPane>
               </children>
            </AnchorPane>
            <VBox prefHeight="426.0" prefWidth="142.0" spacing="5.0">
               <children>
                  <fx:include fx:id="windDirectionTile" source="widget/wind_direction_tile.fxml" />
                  <fx:include fx:id="windSpeedTile" source="widget/wind_speed_tile.fxml" />
                  <fx:include fx:id="ballOrientationTile" source="widget/ball_orientation_tile.fxml" />
                  <MenuButton mnemonicParsing="false" prefHeight="31.0" prefWidth="163.0" text="Features">
                    <items>
                        <CheckMenuItem fx:id="windLinesCheckbox" mnemonicParsing="false" onAction="#handleWindLinesFlagChanged" text="Wind lines" />
                        <CheckMenuItem fx:id="ballOrientationCheckbox" mnemonicParsing="false" onAction="#handleBallOrientationFlagChanged" text="Ball orientation" />
                        <CheckMenuItem fx:id="ballTrajectoryCheckbox" mnemonicParsing="false" onAction="#handleBallTrajectoryFlagChanged" text="Ball trajectory" />
                    </items>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </MenuButton>
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
